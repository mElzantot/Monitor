
@model List<SubTask>


<div class="d-flex">
    <h4 class="mr-3 pt-2" style="">
        @Model.FirstOrDefault().Engineer.UserName
    </h4>
    <span class="alert alert-danger">@Model.Count Sub Tasks</span>
</div>
<table class="table table-hover ">
    <thead class=" alert-info">
        <tr>
            <th>Name</th>
            <th>Priority</th>
            @*<th>Start Date</th>*@
            <th>End Date</th>
            <th>Progress</th>
            <th>Actual Duration</th>
            <th>Status</th>
            <th>Description</th>
        </tr>
    </thead>

    @for (int i = 0; i < Model.Count(); i++)
    {
        <tr>
            <td>@Model[i].Name</td>
            <td>@Model[i].Priority</td>
            @*<td>@Model[i].StartDate.Value.ToShortDateString()</td>*@
            <td>@Model[i].EndDate.Value.ToShortDateString()</td>
            <td><div class="progress"><div class="progress-bar" role="progressbar" style="width: @Model[i].Progress%;" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">@Model[i].Progress%</div></div></td>
            <td>@Model[i].ActualDuration Days</td>
            <td>@Model[i].Status</td>
            <td>
                <div class="btn-group dropleft">
                    <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-info"></i>
                    </button>
                    <div class="dropdown-menu">
                        @Model[i].Description
                    </div>
                </div>

            </td>
        </tr>
    }
</table>