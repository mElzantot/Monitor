@model EmployeeViewModel
@{
    ViewData["Title"] = "Admin | Add Employee";
    string roleName = "Name";

}

<form method="post" class="row">
    <div class="col-4">
        <div class="form-group">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group ">
            <label asp-for="FK_TeamId"></label>
            <select asp-for="FK_TeamId" asp-items="new SelectList (Model.teams,nameof(Team.Id),nameof(Team.Name))" class="form-control">
                <option>Select Department</option>
            </select>
            <span asp-validation-for="FK_TeamId" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="role"></label>
            <select asp-for="role" asp-items="new SelectList(Model.Roles,roleName,roleName)" class="form-control"></select>
            <span asp-validation-for="role" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Add Employee</button>
        <button type="reset" class="btn btn-danger">Cancel</button>
    </div>
</form>
