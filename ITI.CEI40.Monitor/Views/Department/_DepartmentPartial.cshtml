@model List<Department>

@for (int i = 0; i < Model.Count; i++)
{
    <tr>
        <td>@Model[i].Name</td>
        @if (Model[i].Manager == null)
        {
            <td></td>
        }
        else
        {
        <td>@Model[i].Manager.UserName</td>
        }
        <td>
            <div class="btn-group" role="group" aria-label="Basic example">
                <a class="btn btn-outline-primary" asp-controller="Department" asp-action="viewTeams" asp-route-id="@Model[i].Id"><i class="fas fa-users"></i></a>
                <button type="button" class="btn btn-danger" onclick="deleteDept(@Model[i].Id)"><i class="far fa-trash-alt"></i></button>
            </div>
        </td>
    </tr>
}