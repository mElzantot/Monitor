                url: ,
                type: get,
                    data:{

                },
                success: function () {
                    $("#time").val('');
                    $("#quality").val('');
                    $("#complex").val('');
                    $("#SubmitModal").modal('hide');
                }
            })

            $("#SubmitModal").modal('hide');
        }



        function Cancele(Id) {
            if (confirm('Do you want to cancel this task')) {
                $.ajax({
                    url: "/TeamLeader/CancelSubTask",
                    type: "Get",
                    data: {
                        id: Id,
                    },
                    success: function () {
                        $(`#${Id}`).hide();
                    }
                })
            }
        }
    </script>
}

