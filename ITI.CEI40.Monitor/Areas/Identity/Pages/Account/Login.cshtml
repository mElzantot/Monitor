                    text-decoration: none;
                    text-align: center;
                    transition: all 0.4s ease-in-out;
                    position: relative;
                    margin: 5px 5px 5px 0;
                }
        /*---------------*/

        .section {
            margin: 12rem 0 0;
        }

        .Logicon {
            display: flex;
            border: 0 solid #ccdece;
            background: #ccdece;
            border-radius: 10px;
            padding: 15px 0 15px 20px;
        }

        .feature-container {
            display: flex;
            justify-content: space-evenly;
            margin: 15px 0 0 0;
        }

        .feature {
            border: .25px solid #e4e4e4;
            border-radius: 5px;
            padding: 15px 0 15px 20px;
            width: 30%;
        }

        p {
            margin: 0;
        }

        body {
            background: #fdfdfd;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $('#log').click(function () {
            var offset = $('#Login').offset().top;
            $('html,body').animate({
                scrollTop: offset - 100
            }, 1000);
        });
    </script>
}
