@model Invoice

<form method="post" data-ajax-url="/Invoice/addInvoice" data-ajax="true" data-ajax-method="Post" data-ajax-complete="addInvoice"
      data-ajax-update="#tableBody" data-ajax-mode="after" id="InvoiceForm">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Invoices</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <input hidden type="text" asp-for="@Model.FK_ProjectId" value="@Model.FK_ProjectId" />
        <input hidden type="number" asp-for="@Model.InvoicesType" value="1" />
        <div class="form-group">
            <label asp-for="@Model.Name"></label>
            <input asp-for="@Model.Name" class="form-control" readonly />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Value"></label>
            <input asp-for="@Model.Value" class="form-control" readonly />
            <span asp-validation-for="@Model.Value" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <table class="table-condensed"  style="text-align:center;">
                    <thead>
                        <tr>
                            <td>Qunatity</td>
                            <td>Description</td>
                            <td>Unit Price</td>
                            <td>Total Price</td>
                        </tr>
                    </thead>
                    <tbody id="itemtbody">
                        @if (Model.invoiceItems != null)
                        {
                            foreach (var item in Model.invoiceItems)
                            {
                                <tr>
                                    <td><input asp-for="@item.Quantity" type="number" readonly /></td>
                                    <td><input asp-for="@item.Description" class="descripe" type="text" readonly /></td>
                                    <td><input asp-for="@item.UnitPrice" type="number" readonly /></td>
                                    <td><input class="totalprice" readonly /></td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="@Model.InvoiceDate"></label>
            <input asp-for="@Model.InvoiceDate" class="form-control" readonly />
            <span asp-validation-for="@Model.InvoiceDate" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <label asp-for="@Model.PaymentDate"></label>
            <input asp-for="@Model.PaymentDate" class="form-control" readonly />
            <span asp-validation-for="@Model.PaymentDate" class="text-danger"></span>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Add</button>
        <button type="reset" class="btn btn-secondary" data-dismiss="modal">Close</button>
    </div>
</form>
