@{
    ViewData["Title"] = "Home Page";
}

@{
    Layout = "~/Views/Shared/SecondLayout.cshtml";
}





<section class="">
    <h1 class="text-center" style="margin:2.5em 0 1em 0 ;color: rgb(50, 146, 82) ">Discover a better way to track time and get work done</h1>
    <div style="display:flex;">
        <h3 style="margin-left:1em; margin:2em 0.5em 1em 0">
            <p style="text-align:center">
                Take control of your projects and find out where your time is going with customizable workflows.
            </p>

            <div style="display:flex;justify-content:center; margin-top:1.5em">
                <a class="section-btn btn btn-default" style="color:black" href="#feature">Discover more</a>
            </div>
        </h3>

        <img src="~/img/7.jpeg" style="margin:0 1.5em 0em 0;">
    </div>
</section>



<!-- Login -->
<section id="Login" class="section">
    <div class="container ">
        <div class="row" style="display:flex;justify-content:space-between">

            <div class="col-6" style="display:flex;align-items:center">
                <div class="about-info">

                    <figure class="Logicon">
                        <figcaption>
                            <h3>Project Management</h3>
                            <p>Never miss a deadline, manage all projects, tasks, and people in one place.  </p>
                        </figcaption>
                    </figure>

                    <figure class="Logicon">
                        <figcaption>
                            <h3>Dashboards</h3>
                            <p>Elegant dashboards and detailed summaries help you spend less time managing projects and more time getting work done.</p>

                        </figcaption>
                    </figure>


                    <figure class="Logicon">
                        <figcaption>
                            <h3>Fast Support</h3>
                            <p>We answer every support question quickly and thoroughly, whether you are just starting out or have been using Monitor for a while.</p>
                        </figcaption>
                    </figure>

                </div>
            </div>

            <div class=" ">
                <div class="entry-form">
                    <form id="account" method="post">
                        <h2 class="mb-4">Login</h2>

                        <input asp-for="Input.Email" class="form-control" placeholder="Your email address" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>

                        <input asp-for="Input.Password" class="form-control" placeholder="Your password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>

                        <p class="mt-4">
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a>
                        </p>
                        <button type="submit" class="submit-btn form-control" id="form-submit">Get started</button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</section>




<section class="section" id="feature">

    <div class="feature-container">
        <figure class="feature">
            <img src="~/img/time.png" />
            <figcaption>
                <h3>Time Tracking</h3>
                <p>Monitor lets you know how much time spent on each of your projects</p>
            </figcaption>
        </figure>


        <figure class="feature">
            <img src="~/img/graphic.png" />
            <figcaption>
                <h3>Progress</h3>
                <p>Monitor the progress over time for each of your projects</p>
            </figcaption>
        </figure>

        <figure class="feature">
            <img src="~/img/bill.png" />
            <figcaption>
                <h3>Money</h3>
                <p>Manage Invoices of your project by keep tracking of expenses and income</p>
            </figcaption>
        </figure>
    </div>

    <div class="feature-container">
        <figure class="feature">
            <img src="~/img/checklist.png" />
            <figcaption>
                <h3>Archive</h3>
                <p>Access your old data easily any time you want</p>
            </figcaption>
        </figure>

        <figure class="feature">
            <img src="~/img/maths.png" />
            <figcaption>
                <h3>Resource Allocation</h3>
                <p>Allocate your resources the best way to maximize your revenue</p>
            </figcaption>
        </figure>

        <figure class="feature">
            <img src="~/img/files-and-folders.png" />
            <figcaption>
                <h3>Files Management</h3>
                <p>Manage and share documents between staff very easily</p>
            </figcaption>
        </figure>
    </div>
</section>



