@section Style{
    <style>
        .section-btn {
            background: transparent;
            border-radius: 50px;
            border: 1px solid var(--green);
            color: #ffffff;
            font-size: 25px;
            font-weight: normal;
            padding: 15px 25px;
            transition: 1s;
        }

            .section-btn:hover {
                background: var(--green);
                border-color: transparent;
            }

        .about-info {
            margin-bottom: 50px;
        }

        .entry-form {
            display: block;
            margin: 0 auto;
            border-radius: 0;
            padding: 2em;
            max-width: 100%;
            max-height: 100%;
            width: inherit;
            height: inherit;
        }

        .entry-form {
            background: #252020;
            border-radius: 100%;
            text-align: center;
            padding: 6em;
            width: 450px;
            height: 450px;
        }

            .entry-form h2 {
                color: #ffffff;
                margin: 0;
            }

            .entry-form .form-control {
                background: transparent;
                border: 0;
                border-bottom: 1px solid;
                border-radius: 0;
                box-shadow: none;
                height: 45px;
                margin: 10px 0;
            }

            .entry-form .submit-btn {
                background: #ffffff;
                border-radius: 50px;
                border: 0;
                color: #252020;
                width: 50%;
                height: 50px;
                margin: 30px auto;
                margin-bottom: 10px;
            }

                .entry-form .submit-btn:hover {
                    background: var(--green);
                    color: #ffffff;
                }


        /*---------------------------------------
           FOOTER
        -----------------------------------------*/

        footer {
            background: #252020;
            padding: 120px 0;
        }

            footer .section-title {
                padding-bottom: 10px;
            }

            footer h2 {
                font-size: 20px;
            }

            footer a,
            footer p {
                color: #909090;
            }

            footer strong {
                color: #d9d9d9;
            }

            footer address p {
                margin-bottom: 0;
            }

            footer .social-icon {
                margin-top: 25px;
            }

        .footer-info {
            margin-right: 2em;
        }

