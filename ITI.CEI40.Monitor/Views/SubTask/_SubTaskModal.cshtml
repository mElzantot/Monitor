@model SubTaskViewModel

<input hidden type="text" asp-for="FK_TaskId" value="@Model.FK_TaskId" />
<input hidden type="number" asp-for="SubTaskId" value="@Model.SubTaskId" />
<input hidden type="number" asp-for="PlannedDuration" value="" id="Duration" />
<div class="row">
    <div class="form-group col-6">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group col-6">
        <label asp-for="Assignee"></label>
        <select asp-for="Assignee" asp-items="new SelectList(Model.TeamMembers ,nameof(ApplicationUser.Id), nameof(ApplicationUser.UserName))" class="form-control">
            @if (Model.Assignee == null)
            {
            <option value=@null>--- Select Assignee ---</option>
            }
        </select>
        <span asp-validation-for="Assignee" class="text-danger"></span>
    </div>
</div>
<div class="form-group">
    <label asp-for="Description"></label>
    <textarea asp-for="Description" class="form-control"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="row">
    <div class="form-group col-6">
        <label asp-for="StartDate"></label>
        <input id="startDate" asp-for="StartDate" type="text" class="form-control plannedDate"><span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <div class="form-group col-6">
        <label asp-for="EndDate"></label>
        <div class="input-group date">
            <input  id="endDate" asp-for="EndDate" type="text" class="form-control plannedDate"><span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
        </div>
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
</div>
<partial name="_ValidationScriptsPartial" />
